{% extends 'baseadmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="index">
    <h1>User index</h1>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Address</th>
                <th>City</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.LastName }}</td>
                <td>{{ user.FirstName }}</td>
                <td>{{ user.Address }}</td>
                <td>{{ user.City }}</td>
                <td>{{ user.ZipCode }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="bg-info">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="bg-warning">edit</a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="bg-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="bg-success">Create new</a>
</div>
{% endblock %}
