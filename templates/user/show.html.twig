{% extends 'baseadmin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="show">
    <h1>User</h1>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.LastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.FirstName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.Address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.City }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ user.ZipCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
