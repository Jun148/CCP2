{% extends 'base.html.twig' %}

{% block title %}Edit User Password{% endblock %}

{% block body %}
<div class="profile">
    {% for message in app.flashes('error') %}
    <div>
        <div class="error"> {{message}}</div>
    </div>
    {% endfor %}
    <h1>Edit your password</h1>
    <br>
    <form method="post">
        <div class="form-field">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control">
        </div>
        <div class="form-field">
            <label for="newpassword">New Password</label>
            <input type="password" id="newpassword" name="newpassword" class="form-control">
        </div>
        <div class="form-field">
            <label for="checkpassword">Confirm the new password</label>
            <input type="password" id="checkpassword" name="checkpassword" class="form-control">
        </div>
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Modifier</button>
        </div>
    </form>
    <br>
    <a href="{{ path('user_profile') }}">Back to your profile</a>        
</div>
{% endblock %}