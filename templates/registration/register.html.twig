{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="login-card">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.last_name)}}
        {{ form_row(registrationForm.first_name)}}
        {{ form_row(registrationForm.address)}}
        {{ form_row(registrationForm.city)}}
        {{ form_row(registrationForm.zip_code)}}
        {{ form_row(registrationForm.agreeTerms) }}
        <br><br>
        <button type="submit" class="btn btn-primary">Incription</button>
    {{ form_end(registrationForm) }}
    </div>
    <br><br>
{% endblock %}
