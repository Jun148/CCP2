{% extends 'baseadmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="card col-12">
        <div class="card-body">
            <h1 class="display-5">Message de {{ contact.fullname }}</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ contact.email }}</td>
                </tr>
                <tr>
                    <th>Subject</th>
                    <td>{{ contact.subject}}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ contact.comment }}</td>
                </tr>
                <tr>
                    <th>Reply</th>
                    {% if contact.reply == null %}
                    <td>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Reply</button>
                        </div>
                        {{ form_end(form) }}
                    </td>
                    {% else %}
                    <td>
                        {{ contact.reply|raw }}
                    </td>
                    {% endif %}
                </tr>
                </tbody>
            </table>            
        </div>
    </div>
</div>
{% endblock %}