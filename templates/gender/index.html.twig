{% extends 'baseadmin.html.twig' %}

{% block title %}Gender index{% endblock %}

{% block body %}
<div class="index">
    <h1>Gender index</h1>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gender in genders %}
            <tr>
                <td>{{ gender.id }}</td>
                <td>{{ gender.Name }}</td>
                <td>
                    <a href="{{ path('gender_show', {'id': gender.id}) }}" class="bg-info">show</a>
                    <a href="{{ path('gender_edit', {'id': gender.id}) }}" class="bg-warning">edit</a>
                    <a href="{{ path('gender_delete', {'id': gender.id}) }}" class="bg-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gender_new') }}" class="bg-success">Create new</a>
</div>
{% endblock %}
