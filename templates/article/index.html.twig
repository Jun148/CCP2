{% extends 'baseadmin.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="index">
    <h1>Article index</h1>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Gender</th>
                <th>Price</th>
                <th>Description</th>
                <th>Images<th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.Name }}</td>
                <td>{{ article.category.name}}</td>
                <td>{{ article.gender.name}}</td>
                <td>{{ article.Price }}</td>
                <td><span class="text-overflow">{{ article.Description }}</span></td>
                {% for image in article.images %}
                <td><img src="{{ vich_uploader_asset(image) }}"></td>
                {% endfor %}
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="bg-info">show</a>
                    
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="bg-warning">edit</a>
                    
                    <a href="{{ path('article_delete', {'id': article.id}) }}" class="bg-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="bg-success">Create new</a>
<div class="index">
{% endblock %}
