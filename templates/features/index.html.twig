{% extends 'baseadmin.html.twig' %}

{% block title %}Features index{% endblock %}

{% block body %}
<div class="index">
    <h1>Features index</h1>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.id }}</td>
                <td>{{ feature.Title }}</td>
                <td><span class="text-overflow">{{ feature.Text }}<span></td>
                <td>
                    <a href="{{ path('features_show', {'id': feature.id}) }}" class="bg-info">show</a>
                    <a href="{{ path('features_edit', {'id': feature.id}) }}" class="bg-warning">edit</a>
                    <a href="{{ path('features_delete', {'id': feature.id}) }}" class="bg-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('features_new') }}" class="bg-success">Create new</a>
</div>
{% endblock %}
