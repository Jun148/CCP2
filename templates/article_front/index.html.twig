{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<form method="post" action="{{ path('cart_add', {'id' : article.id}) }}">
<div class="article-container">
    <div class="left-part">
        {% for image in article.images %}
        <div class="article-img"><img src="{{ vich_uploader_asset(image) }}"></div>
        {% endfor %}
    </div>
    <div class="center-part">
        <div class="article-name"><h1>{{ article.name }}</h1></div>
        <div class="article-price"><p>{{ article.price }}$</p></div>
        <div class="article-description"><p>{{ article.description }}</p></div>
    </div>
    <div class="right-part">
        <div class="article-price"><p>{{ article.price }}$</p></div>
        <p><i class="fa fa-truck"></i>  Free Delivery</p>
        <br><br>
        <p>
            <label for="qty">Quantity:</label>
            <input type="number" id="qty" name="qty" min="1" max="10" value="1"></input>
        </p>
        <br><br>
        <button type="submit" id="addtocart"><i class="fa fa-shopping-cart" aria-hidden="true"></i>Add to Cart</button>
    </div>
</div>
</form>
{% endblock %}
